<div class="row m-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary c-w">Formulario</div>
            <div class="card-body">
                <form action="{{#if editMode}}/editar-editorial{{else}}/agregar-editorial{{/if}}" method="post">
                    <label class="form-label" for="nombre">Nombre</label>
                    <input class="form-control" type="text" name="nombre" id="nombre" value="{{editorial.nombre}}">
                    <label class="form-label" for="telefono">Teléfomo</label>
                    <input class="form-control" type="tel" name="telefono" id="telefono" value="{{editorial.telefono}}">
                    <label class="form-label" for="pais">País</label>
                    <input class="form-control" type="text" name="pais" id="pais" value="{{editorial.pais}}">
                    <input type="hidden" value="{{editorial.id}}" name="id">
                    <button class="btn btn-primary mt-3" type="submit">{{#if editMode}}Actualizar{{else}}Agregar{{/if}}</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>